<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.onthespot.LvlSelectActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:layout_width="118.75dp"
            android:layout_height="130dp"
            android:id="@+id/level1Button"
            android:layout_row="0"
            android:layout_column="0"
            android:maxWidth="140dp"
            android:maxHeight="140dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:background="@drawable/star0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/textView4"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            />

        <ImageButton
            android:layout_width="118.75dp"
            android:layout_height="130dp"
            android:id="@+id/level2Button"
            android:layout_row="0"
            android:layout_column="1"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:clickable="true"
            android:background="@drawable/levellocked"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/level2Score"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="118.75dp"
            android:layout_height="130dp"
            android:id="@+id/level3Button"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/levellocked"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/level3Score"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="118.75dp"
            android:layout_height="130dp"
            android:id="@+id/level4Button"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/levellocked"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/level4Score"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="118.75dp"
            android:layout_height="130dp"
            android:id="@+id/level5Button"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/levellocked"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/level5Score"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="118.75dp"
            android:layout_height="130dp"
            android:id="@+id/level6Button"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/levellocked"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/level6Score"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_gravity="center" />



    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level Select"
        android:id="@+id/levelSelectMenu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textColor="#ff000000"
        android:textSize="40dp" />

</RelativeLayout>
