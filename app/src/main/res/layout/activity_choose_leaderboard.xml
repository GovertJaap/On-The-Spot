            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="7"
            android:textSize="40dp"
            android:id="@+id/level7leaderboard"
            android:layout_row="2"
