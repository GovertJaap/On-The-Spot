            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/leaderboardselect2"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/plainbutton"
            android:layout_margin="5dp"/>

